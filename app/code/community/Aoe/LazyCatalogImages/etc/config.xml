<?xml version="1.0"?>
<config>
    <modules>
        <Aoe_LazyCatalogImages>
            <version>0.5.0</version>
        </Aoe_LazyCatalogImages>
    </modules>
    <global>
        <helpers>
            <Aoe_LazyCatalogImages>
                <class>Aoe_LazyCatalogImages_Helper</class>
            </Aoe_LazyCatalogImages>
            <catalog>
                <rewrite>
                    <image>Aoe_LazyCatalogImages_Helper_Catalog_Image</image>
                </rewrite>
            </catalog>
        </helpers>
        <models>
            <Aoe_LazyCatalogImages>
                <class>Aoe_LazyCatalogImages_Model</class>
            </Aoe_LazyCatalogImages>
        </models>
        <events>
            <clean_catalog_images_cache_after>
                <observers>
                    <Aoe_LazyCatalogImages>
                        <class>Aoe_LazyCatalogImages/Observer</class>
                        <method>cleanCache</method>
                    </Aoe_LazyCatalogImages>
                </observers>
            </clean_catalog_images_cache_after>
        </events>
    </global>
    <default>
        <catalog>
            <product_image>
                <lci_active>0</lci_active>
                <lci_cache>1</lci_cache>
                <lci_max_age>3600</lci_max_age>
            </product_image>
        </catalog>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Aoe_LazyCatalogImages/>
            </modules>
        </suite>
    </phpunit>
</config>
