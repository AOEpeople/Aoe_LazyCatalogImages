<?xml version="1.0"?>
<config>
    <sections>
        <catalog>
            <groups>
                <product_image>
                    <fields>
                        <lci_active translate="label">
                            <label>Enable Lazy Image Loading</label>
                            <sort_order>10000</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lci_active>
                        <lci_cache translate="label">
                            <label>Cache Lazy Loaded Images</label>
                            <sort_order>10010</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lci_cache>
                        <lci_max_age translate="label">
                            <label>Lazy Loaded Image HTTP Max-Age</label>
                            <comment>This is the number of seconds passed in the HTTP cache control header for max-age</comment>
                            <sort_order>10030</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lci_max_age>
                    </fields>
                </product_image>
            </groups>
        </catalog>
    </sections>
</config>
